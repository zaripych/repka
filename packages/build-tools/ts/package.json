{
  "name": "@repka-kit/ts",
  "version": "1.0.0-beta.5",
  "description": "Next generation build tools for monorepo: lint, bundle and package your TypeScript projects",
  "keywords": [
    "repka",
    "monorepo",
    "lint",
    "build",
    "declarations",
    "TypeScript",
    "ESM",
    "ESModules"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zaripych/repka.git"
  },
  "license": "MIT",
  "author": {
    "name": "Rinat Zaripov",
    "url": "https://github.com/zaripych"
  },
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./configs/*": "./configs/*"
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "dts-bundle-generator": "./bin/dts-bundle-generator.gen.cjs",
    "eslint": "./bin/eslint.gen.mjs",
    "jest": "./bin/jest.gen.mjs",
    "lint-staged": "./bin/lint-staged.gen.mjs",
    "prettier": "./bin/prettier.gen.mjs",
    "repka": "./bin/repka.gen.mjs",
    "tsc": "./bin/tsc.gen.mjs",
    "tsx": "./bin/tsx.gen.mjs",
    "turbo": "./bin/turbo.gen.mjs"
  },
  "files": [
    "src",
    "dist",
    "configs"
  ],
  "scripts": {
    "build:tools": "repka build:node",
    "declarations": "repka declarations",
    "integration": "repka integration",
    "lint": "repka lint",
    "setup:integration": "tsx ./src/__integration__/setup.ts",
    "test": "repka test"
  },
  "dependencies": {
    "@jest/globals": "29.5.0",
    "@rollup/plugin-commonjs": "24.1.0",
    "@rollup/plugin-json": "6.0.0",
    "@rollup/plugin-node-resolve": "15.0.2",
    "@rollup/plugin-replace": "5.0.2",
    "@rollup/plugin-virtual": "3.0.1",
    "@rollup/pluginutils": "5.0.2",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.59.1",
    "@typescript-eslint/parser": "5.59.1",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.18",
    "esbuild-jest": "0.5.0",
    "eslint": "8.39.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-json-files": "2.1.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "fast-glob": "3.2.12",
    "jest": "29.5.0",
    "jest-config": "29.5.0",
    "js-yaml": "4.1.0",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "prompts": "2.4.2",
    "rollup": "3.21.2",
    "rollup-plugin-analyzer": "4.0.0",
    "rollup-plugin-generate-package-json": "3.2.0",
    "tsx": "3.12.7",
    "turbo": "1.9.3",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@build-tools/dts-bundle-generator": "workspace:*",
    "@jest/types": "29.5.0",
    "@testing-tools/packages": "workspace:*",
    "@types/eslint": "8.37.0",
    "@types/js-yaml": "4.0.5",
    "@types/prompts": "2.4.4",
    "@utils/ts": "workspace:*",
    "commander": "9.2.0",
    "kleur": "4.1.5",
    "picocolors": "1.0.0",
    "utility-types": "3.10.0"
  },
  "publishConfig": {
    "directory": "dist"
  }
}
