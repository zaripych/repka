{
  "name": "@repka-kit/ts",
  "version": "1.0.0-beta.0",
  "description": "Next generation build tools for monorepo: lint, bundle and package your TypeScript projects",
  "keywords": [
    "repka",
    "monorepo",
    "lint",
    "build",
    "declarations",
    "TypeScript",
    "ESM",
    "ESModules"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zaripych/repka.git"
  },
  "license": "MIT",
  "author": {
    "name": "Rinat Zaripov",
    "url": "https://github.com/zaripych"
  },
  "type": "module",
  "exports": "./src/index.ts",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "dts-bundle-generator": "./bin/dts-bundle-generator.gen.cjs",
    "jest": "./bin/jest.gen.mjs",
    "lint-staged": "./bin/lint-staged.gen.mjs",
    "prettier": "./bin/prettier.gen.mjs",
    "tsc": "./bin/tsc.gen.mjs",
    "tsx": "./bin/tsx.gen.mjs",
    "turbo": "./bin/turbo.gen.mjs"
  },
  "files": [
    "src",
    "dist",
    "configs"
  ],
  "scripts": {
    "build:tools": "tsx ./build.ts",
    "declarations": "tsx ./declarations.ts",
    "integration": "tsx ./integration.ts",
    "lint": "tsx ./lint.ts",
    "setup:integration": "tsx ./src/__integration__/setup.ts",
    "test": "tsx ./test.ts"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "22.0.1",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-replace": "4.0.0",
    "@rollup/plugin-virtual": "2.1.0",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "builtin-modules": "3.3.0",
    "esbuild": "0.14.47",
    "esbuild-jest": "0.5.0",
    "eslint": "8.18.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-json-files": "1.3.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "fast-glob": "3.2.11",
    "jest": "28.1.1",
    "js-yaml": "4.1.0",
    "lint-staged": "13.0.3",
    "picocolors": "1.0.0",
    "prettier": "2.7.1",
    "rollup": "2.75.7",
    "rollup-plugin-analyzer": "4.0.0",
    "rollup-plugin-generate-package-json": "3.2.0",
    "tsx": "3.6.0",
    "turbo": "1.3.1",
    "typescript": "4.7.4"
  },
  "devDependencies": {
    "@build-tools/dts-bundle-generator": "workspace:*",
    "@jest/types": "28.1.1",
    "@types/eslint": "8.4.3",
    "@types/jest": "28.1.3",
    "@types/js-yaml": "4.0.5",
    "@types/node": "18.0.0",
    "utility-types": "3.10.0"
  },
  "publishConfig": {
    "directory": "dist"
  }
}
