{
  "name": "@repka-kit/ts",
  "version": "1.0.5",
  "description": "Next generation build tools for monorepo: lint, bundle and package your TypeScript projects",
  "keywords": [
    "repka",
    "monorepo",
    "lint",
    "build",
    "declarations",
    "TypeScript",
    "ESM",
    "ESModules"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zaripych/repka.git"
  },
  "license": "MIT",
  "author": {
    "name": "Rinat Zaripov",
    "url": "https://github.com/zaripych"
  },
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./configs/*": "./configs/*"
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "bin": {
    "dts-bundle-generator": "./src/bin/dts-bundle-generator.cts",
    "eslint": "./src/bin/eslint.ts",
    "jest": "./src/bin/jest.ts",
    "lint-staged": "./src/bin/lint-staged.ts",
    "prettier": "./src/bin/prettier.ts",
    "repka": "./src/bin/repka.ts",
    "tsc": "./src/bin/tsc.ts",
    "tsx": "./src/bin/tsx.mjs"
  },
  "files": [
    "src",
    "dist",
    "configs"
  ],
  "scripts": {
    "build:tools": "repka build:node",
    "declarations": "repka declarations",
    "integration": "repka integration",
    "lint": "repka lint",
    "setup:integration": "tsx ./src/__integration__/setup.ts",
    "test": "repka test"
  },
  "dependencies": {
    "@jest/globals": "29.7.0",
    "@jest/transform": "29.7.0",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-json": "6.0.1",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-replace": "5.0.3",
    "@rollup/plugin-virtual": "3.0.2",
    "@rollup/pluginutils": "5.0.5",
    "@types/jest": "29.5.6",
    "@types/node": "20.10.4",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@typescript-eslint/parser": "6.7.4",
    "builtin-modules": "3.3.0",
    "dedent": "1.5.1",
    "esbuild": "0.19.5",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jest": "27.4.2",
    "eslint-plugin-json-files": "3.0.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-unicorn": "48.0.1",
    "fast-glob": "3.3.1",
    "jest": "29.7.0",
    "jest-config": "29.7.0",
    "js-yaml": "4.1.0",
    "lint-staged": "14.0.1",
    "magic-string": "0.30.4",
    "prettier": "3.1.0",
    "prompts": "2.4.2",
    "rollup": "4.0.2",
    "rollup-plugin-analyzer": "4.0.0",
    "rollup-plugin-generate-package-json": "3.2.0",
    "tsx": "4.6.2",
    "typescript": "5.2.2"
  },
  "devDependencies": {
    "@build-tools/dts-bundle-generator": "workspace:*",
    "@jest/types": "29.6.3",
    "@testing-tools/packages": "workspace:*",
    "@types/eslint": "8.44.3",
    "@types/js-yaml": "4.0.8",
    "@types/prompts": "2.4.6",
    "@utils/ts": "workspace:*",
    "commander": "11.0.0",
    "kleur": "4.1.5",
    "utility-types": "3.10.0"
  },
  "publishConfig": {
    "directory": "dist",
    "linkDirectory": false
  }
}
