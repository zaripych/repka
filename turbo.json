{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/master",
  "pipeline": {
    "build:tools": {
      "dependsOn": ["^build:tools"],
      "inputs": ["src/*.ts", "src/*/*.ts", "src/**/*.ts", "configs"],
      "outputs": ["dist"],
      "outputMode": "none"
    },
    "build": {
      "dependsOn": ["^build:tools"],
      "inputs": ["src/*.ts", "src/*/*.ts", "src/**/*.ts"],
      "outputs": ["dist"]
    },
    "lint": {
      "dependsOn": ["^build:tools"],
      "inputs": ["src/*.ts", "src/*/*.ts", "src/**/*.ts"],
      "outputs": [".tsc-out"]
    },
    "test": {
      "dependsOn": ["^build:tools"],
      "inputs": ["src/*.ts", "src/*/*.ts", "src/**/*.ts"],
      "outputs": []
    }
  }
}
