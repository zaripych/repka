{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/master",
  "pipeline": {
    "build:tools": {
      "dependsOn": ["^build:tools"],
      "inputs": [
        "src/*.ts",
        "src/*/*.ts",
        "src/**/*.ts",
        "configs",
        "build.ts"
      ],
      "outputs": ["dist"],
      "outputMode": "none"
    },
    "build": {
      "dependsOn": ["^build:tools"],
      "inputs": ["src/*.ts", "src/*/*.ts", "src/**/*.ts"],
      "outputs": ["dist"]
    },
    "lint": {
      "dependsOn": ["^build:tools"],
      "inputs": ["src/*.ts", "src/*/*.ts", "src/**/*.ts"],
      "outputs": [".tsc-out"]
    },
    "test": {
      "dependsOn": ["^build:tools"],
      "inputs": ["src/*.ts", "src/*/*.ts", "src/**/*.ts"],
      "outputs": []
    },
    "declarations": {
      "dependsOn": ["^build:tools"],
      "inputs": ["src/*.ts", "src/*/*.ts", "src/**/*.ts"],
      "outputs": ["dist/**/*.d.ts"]
    },
    "setup:integration": {
      "dependsOn": ["^build:tools"],
      "inputs": ["dist/**/*", "src/__integration__"],
      "outputs": [".integration/template"],
      "outputMode": "new-only"
    },
    "integration": {
      "dependsOn": ["^build:tools", "setup:integration"],
      "inputs": ["src/*.ts", "src/*/*.ts", "src/**/*.ts"],
      "outputs": []
    }
  }
}
